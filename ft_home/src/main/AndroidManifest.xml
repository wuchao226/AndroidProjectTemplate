<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true">
        <activity
            android:name=".activity.BottomSheetActivity"
            android:exported="false" />
        <activity
            android:name=".activity.BadgeDrawableActivity"
            android:exported="false" />
        <activity
            android:name=".activity.DividerActivity"
            android:exported="false" />
        <activity
            android:name=".activity.FloatViewActivity"
            android:exported="false" />
        <activity
            android:name=".activity.NotificationActivity"
            android:exported="false" />
        <activity
            android:name=".activity.ShapeableImageViewActivity"
            android:exported="false" />
        <activity
            android:name=".activity.MaterialButtonActivity"
            android:exported="false" /> <!-- 重启应用（必须在独立进程） -->
        <activity
            android:name=".activity.RestartActivity"
            android:exported="false"
            android:process=":restart" /> <!-- 崩溃展示（必须在独立进程） -->
        <activity
            android:name=".activity.CrashActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:process=":crash"
            android:screenOrientation="landscape" /> <!-- 引导页 -->
        <activity
            android:name=".activity.GuideActivity"
            android:exported="false"
            android:launchMode="singleTop" /> <!-- 首页 -->
        <activity
            android:name=".HomeActivity"
            android:exported="false"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.TabLayoutActivity" />
    </application>

</manifest>